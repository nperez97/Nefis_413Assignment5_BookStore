@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel


@foreach (var item in Model.Books)
{
    <!--put it name of the new cshtml and for model through in the name of the iteration-->
    <partial name="BookSummary" model="item" />
}

<!--BOOTSTRAP CHANGE Made the selected page green-->
<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark"
     page-class-selected="btn-success"
     page-url-category="@Model.Type"
     class="btn-group pull-right m-1"></div>